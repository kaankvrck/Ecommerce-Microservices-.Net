@model LoginRequestDto

<!-- Start Section -->
<section class="container-fluid py-5">
    <div class="row">
        <!-- Login Section -->
        <div class="col-md-6 col-lg-12 pb-5">
            <div class="h-100 py-5 text-left">
                <div class="bg-light py-5">
                    <div class="container">
                        <div class="row align-items-center py-5">
                            <div class="col-md-6 m-auto">
                                <h2 id="login" class="h1 text-center">Login</h2>
                                <!-- Start Login Form -->
                                <form method="post">
                                    <div class="container border p-4">
                                        <div class="row text-center">
                                            <h1>Login</h1>
                                        </div>
                                        <div class="row">
                                            <div class="col-12 col-md-6 offset-md-3 pb-2">
                                                <input asp-for="UserName" class="form-control" placeholder="Username..." />
                                                <span asp-validation-for="UserName" class="text-danger" />
                                            </div>
                                            <div class="col-12 col-md-6 offset-md-3 pb-2">
                                                <input asp-for="Password" class="form-control" placeholder="Password..." />
                                                <span asp-validation-for="Password" class="text-danger" />
                                            </div>
                                            <div class="col-12 col-md-6 offset-md-3 pb-2">
                                                <button type="submit" class="form-control btn btn-success" value="Submit">Login</button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                                <div class="mb-3 text-center">
                                    Not registered? <a href="#signup">Create an account</a>
                                </div>
                                <!-- End Login Form -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</section>
<!-- End Section -->
        @section Scripts {
            <partial name="_ValidationScriptsPartial" />
        }
        

