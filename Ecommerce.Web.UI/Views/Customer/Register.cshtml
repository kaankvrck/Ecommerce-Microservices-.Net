@model RegistrationRequestDto

<!-- Signup Section -->
<section class="container-fluid py-5">
<div class="col-md-6 col-lg-12 pb-5">
    <div class="h-100 py-5 text-left">
        <div class="bg-light py-3">
            <div class="container">
                <div class="row align-items-center py-5">
                    <div class="col-md-6 m-auto">
                        <!-- Start Sign up Form -->
                        <form method="post">
                            <div class="container border p-4">
                                <div class="row text-center p-3">
                                    <h1>Register</h1>
                                </div>
                                <div class="row">
                                    <div class="col-12 col-md-6 offset-md-3 pb-2">
                                        <input asp-for="Email" class="form-control" placeholder="Email..." />
                                        <span asp-validation-for="Email" class="text-danger" />
                                    </div>
                                    <div class="col-12 col-md-6 offset-md-3 pb-2">
                                        <input asp-for="Name" class="form-control" placeholder="Name..." />
                                        <span asp-validation-for="Name" class="text-danger" />
                                    </div>
                                    <div class="col-12 col-md-6 offset-md-3 pb-2">
                                        <input asp-for="PhoneNumber" class="form-control" placeholder="Phone Number..." />
                                        <span asp-validation-for="PhoneNumber" class="text-danger" />
                                    </div>
                                    <div class="col-12 col-md-6 offset-md-3 pb-2">
                                        <input asp-for="Address" class="form-control" placeholder="Address..." />
                                        <span asp-validation-for="Address" class="text-danger" />
                                    </div>
                                    <div class="col-12 col-md-6 offset-md-3 pb-2">
                                        <input asp-for="Password" class="form-control" placeholder="Password..." />
                                        <span asp-validation-for="Password" class="text-danger" />
                                    </div>
                                    <div class="col-12 col-md-6 offset-md-3 pb-2">
                                        <select asp-for="Role" class="form-select" asp-items="@ViewBag.RoleList">
                                            <option disabled selected>--Select Role--</option>
                                        </select>
                                    </div>

                                    <div class="col-12 col-md-6 offset-md-3 pb-2">
                                        <button type="submit" class="form-control btn btn-success" value="Submit">Register</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                        <div class="mb-3 text-center">
                                Already have an account? <a asp-controller="Customer" asp-action="Login">Login</a>
                        </div>
                        <!-- End Sign up Form -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}