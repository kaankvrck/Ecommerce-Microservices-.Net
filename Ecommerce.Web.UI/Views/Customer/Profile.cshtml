@model UserDto

@{
    ViewData["Title"] = "Profile Page";
}

<section class="bg-success py-5">
    <div class="container">
        <div class="row align-items-center py-5">
            <div class="col-md-8 text-white">
                <h2 class="display-4">Customer Profile</h2>
                <div id="profile-container">
                    <table class="table table-striped text-white">
                        <tr>
                            <td class="text-white">Name</td>
                            <td class="text-white">@Model.Name</td>
                        </tr>
                        <tr>
                            <td class="text-white">Email</td>
                            <td class="text-white">@Model.Email</td>
                        </tr>
                        <tr>
                            <td class="text-white">Phone</td>
                            <td class="text-white">@Model.PhoneNumber</td>
                        </tr>
                        <tr>
                            <td class="text-white">Address </td>
                            <td class="text-white">@Model.Address</td>
                        </tr>

                    </table>
                </div>
            </div>
            <div class="col-md-4 d-flex align-items-center justify-content-center">
                <div class="h1 text-white"><i class="fa fa-user fa-4x"></i></div>
            </div>
        </div>
    </div>
</section>

